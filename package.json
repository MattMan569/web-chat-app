{
  "name": "web-chat-app",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy:client": "copyfiles -e \"**/*.ts\" -e \"**/*.scss\" -u 1 \"src/client/**/*\" \"dist/\"",
    "copy:templates": "copyfiles -u 1 \"src/templates/**/*\" \"dist/\"",
    "sass": "node-sass src/client/scss/styles.scss dist/client/css/styles.css --output-style=compressed",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "bundle": "browserify src/client/client.ts -p [ tsify ] -o dist/client/bundle.js",
    "start": "node dist/server",
    "predev": "npm run clean && npm-run-all --parallel copy:* sass build bundle",
    "dev": "env-cmd -f ./config/dev.env node dist/server",
    "test": "env-cmd -f ./config/test.env jest --runInBand || exit 0",
    "db": "C:/Users/matth/mongodb/bin/mongod.exe --dbpath=C:/Users/matth/mongodb-data"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattMan569/web-chat-app.git"
  },
  "author": "Matthew Polsom",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MattMan569/web-chat-app/issues"
  },
  "homepage": "https://github.com/MattMan569/web-chat-app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "handlebars": "^4.5.3",
    "hbs": "^4.0.6",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.5",
    "mongoose": "^5.7.12",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.2",
    "@types/hbs": "^4.0.1",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongoose": "^5.5.32",
    "@types/node": "^12.12.11",
    "@types/validator": "^12.0.1",
    "browserify": "^16.5.0",
    "copyfiles": "^2.1.1",
    "env-cmd": "^10.0.1",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "tsify": "^4.0.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
