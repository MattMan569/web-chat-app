{
  "name": "web-chat-app",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "sass": "node-sass src/client/scss/styles.scss dist/client/css/styles.css --output-style=compressed",
    "precopy": "rimraf dist",
    "copy": "copyfiles -e \"**/*.ts\" -e \"**/*.scss\" -u 1 \"src/client/**/*\" \"dist/\"",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run copy && npm run sass && npm run build",
    "start": "node dist/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattMan569/web-chat-app.git"
  },
  "author": "Matthew Polsom",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MattMan569/web-chat-app/issues"
  },
  "homepage": "https://github.com/MattMan569/web-chat-app#readme",
  "dependencies": {
    "express": "^4.17.1",
    "hbs": "^4.0.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/hbs": "^4.0.1",
    "@types/node": "^12.12.11",
    "@types/node-sass-middleware": "0.0.31",
    "copyfiles": "^2.1.1",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
