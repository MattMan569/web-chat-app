<header>
    <h1><a href="/">{{websiteTitle}}</a></h1>

    <div class="header-content">
        {{#if loggedIn}}
        <div class="dropdown">
            <button class="dropdown-btn" id="profile-btn" style="background-image: url({{avatar}});"></button>
            <div class="dropdown-content" id="profile-dropdown-content">
                <p>{{username}}</p>
                <a href="/users/{{userId}}">Profile</a>
                <a href="/users/logout">Logout</a>
            </div>
        </div>
        {{else}}
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
        {{/if}}
    </div>
</header>