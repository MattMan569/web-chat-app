<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{pageTitle}}</title>
</head>

<body data-page={{page}}>
    {{> header}}

    <main class="chat-page">
        <section class="messages">
            <div id="message-list">
                {{!-- List of rendered messages --}}
                {{!-- Rendered by handlebars, placed by jQuery --}}
            </div>

            <template id="message-item-template">
                <article class="message">
                    <p class="created-at">\{{createdAt}}</p>
                    <p class="sender">\{{sender}}</p>
                    <p class="message-content">\{{message}}</p>
                </article>
            </template>
        </section>

        <section class="compose">
            <article class="compose-form">
                <form id="message-form" autocomplete="off">
                    <fieldset id="form-controls">
                        <div class="form-group">
                            <textarea id="message-field" name="message" cols="100" rows="3" autofocus
                                required></textarea>
                            <button type="submit">Send</button>
                        </div>
                    </fieldset>
                </form>
            </article>
        </section>
    </main>

    {{> footer}}

    <script src="/js/chat.js"></script>
</body>

</html>